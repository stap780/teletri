<!-- CTA Section Component -->
<section class="cta-section">
  <div class="container">
    <h2 class="display-6 mb-4 fade-in-up"><%= local_assigns[:title] || "Готовы начать?" %></h2>
    <% if local_assigns[:subtitle] %>
      <p class="lead mb-4 fade-in-up"><%= subtitle %></p>
    <% end %>
    
    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center fade-in-up">
      <% if local_assigns[:primary_action] %>
        <%= primary_action %>
      <% end %>
      <% if local_assigns[:secondary_action] %>
        <%= secondary_action %>
      <% end %>
    </div>
    
    <% if local_assigns[:additional_info] %>
      <div class="mt-4 fade-in-up">
        <%= additional_info %>
      </div>
    <% end %>
  </div>
</section>
