<section class="section section-white" id="pricing">
  <div class="container">
    <h2 class="text-center mb-3 display-6 scroll-reveal">Тарифные планы</h2>
    <p class="text-muted text-center mb-5 lead scroll-reveal">Выберите план, который подходит вашему бизнесу</p>
    
    <div class="pricing-grid">
      <!-- Базовый план -->
      <div class="pricing-card scroll-reveal">
        <div class="pricing-header">
          <h5 class="pricing-title h4">Базовый</h5>
          <div class="pricing-price">
            <span class="price-amount">₽0</span>
            <span class="price-period">/месяц</span>
          </div>
        </div>
        <ul class="pricing-features">
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>Полный функционал</span>
          </li>
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>Умные скидки</span>
          </li>
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>Email поддержка</span>
          </li>
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>30 дней бесплатно</span>
          </li>
        </ul>
        <div class="pricing-button-container">
          <%= link_to "Начать бесплатно", "#", 
                class: "btn btn-outline-primary w-100 btn-lg webform-button" %>
        </div>
      </div>
      
      <!-- Профессиональный план -->
      <div class="pricing-card pricing-card-featured scroll-reveal">
        <div class="pricing-badge">
          <span class="badge bg-warning text-dark px-3 py-2 fs-6">Популярный</span>
        </div>
        <div class="pricing-header">
          <h5 class="pricing-title h4">Профессиональный</h5>
          <div class="pricing-price">
            <span class="price-amount">₽2,400</span>
            <span class="price-period">/месяц</span>
          </div>
          <small class="text-muted text-decoration-line-through">₽4,000</small>
        </div>
        <ul class="pricing-features">
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>Полный функционал</span>
          </li>
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>Расширенная аналитика</span>
          </li>
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>Приоритетная поддержка</span>
          </li>
          <li class="feature-item">
            <i class="bi bi-check-circle-fill"></i>
            <span>Кастомные настройки</span>
          </li>
        </ul>
        <div class="pricing-button-container">
          <%= link_to "Выбрать план", "#", 
                class: "btn btn-primary w-100 btn-lg fw-bold webform-button" %>
        </div>
      </div>
      
      <!-- Стандарт 3 -->
      <div class="pricing-card scroll-reveal">
        <div class="pricing-header">
          <h5 class="pricing-title h4">Стандарт 3</h5>
